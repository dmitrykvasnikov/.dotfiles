[user]
	email = dmitry.kvasnikov@gmail.com
	name = Dmitry Kvasnikov
[core]
	editor = vim
	pager = delta
	autocrlf = input
	safecrlf = warn
[init]
	defaultBranch = master
[pull]
	rebase = false
[format]
	pretty = %h %ad | %s%d [%an]
[log]
	date = short
[push]
	autoSetupRemote = true
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections
    side-by-side = true
    # delta detects terminal colors automatically; set one of these to disable auto-detection
    # dark = true
    # light = true
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
